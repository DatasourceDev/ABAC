@model ABAC.DTO.UserRoleDTO
@{
    ViewData["Title"] = "กำหนดสิทธิ์การใช้งาน";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div aria-live="polite" aria-atomic="true" style="position: relative;">
                <div class="page-title-box">
                    <div class="float-right" style="width:50%">
                        @if (ViewBag.ReturnCode != null)
                        {
                            @if (ViewBag.ReturnCode == ReturnCode.Success)
                            {
                                <div class="alert alert-success  border-0" role="alert">
                                    <i class="mdi mdi-check-circle-outline font-18 mr-1"></i>
                                    <strong class="font-18">@ViewBag.Message</strong>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-danger border-0" role="alert">
                                    <i class="mdi mdi-close-circle-outline font-18 mr-1"></i>
                                    <strong class="font-18">@ViewBag.Message</strong>
                                </div>
                            }
                        }
                    </div>
                    <h4 class="page-title">กำหนดสิทธิ์การใช้งาน</h4>
                    <p class="text-muted">
                        User Role
                    </p>
                </div><!--end page-title-box-->

            </div>
        </div><!--end col-->
    </div>
    <!--end row-->
    <form class="form-horizontal form-parsley" asp-action="UserRole" asp-controller="System" method="get">
        <div class="row">
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-body">
                        <div class="form-group row">
                            <div class="col-lg-6">
                                <label class="col-form-label">ประเภทผู้ใช้</label>
                                <select class="form-control" asp-for="userrole_search" onchange="userrole_onchange()">
                                    <option value="@roleType.Admin">@roleType.Admin</option>
                                    <option value="@roleType.Helpdesk">@roleType.Helpdesk</option>
                                    <option value="@roleType.PasswordOperator">@roleType.PasswordOperator</option>
                                    <option value="@roleType.WebMaster">@roleType.WebMaster</option>
                                </select>
                            </div>
                            <div class="col-lg-2">
                                <label class="col-form-label"><br /></label>
                                <button class="btn btn-dark btn-block" type="submit">ค้นหา</button>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-12">
                                <div class="table-rep-plugin">
                                    <div class="table-responsive mb-0" data-pattern="priority-columns">
                                        <table class="table table-striped mb-0 font-12">
                                            <thead>
                                                <tr>
                                                    <th>Sam Account Name</th>
                                                    <th>Username</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @if (Model.lists != null)
                                                {
                                                    foreach (user_role item in Model.lists)
                                                    {
                                                        <tr>
                                                            <td></td>
                                                            <td></td>
                                                        </tr>
                                                    }

                                                }
                                                @if (Model.lists == null || Model.lists.Count() == 0)
                                                {
                                                    <tr>
                                                        <td colspan="2" class="text-center">ไม่พบข้อมูล</td>
                                                    </tr>
                                                }
                                            </tbody>

                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>


                    </div> <!-- end card-body -->
                </div> <!-- end card -->
            </div> <!-- end col -->
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-body">
                        <div class="form-group row">
                            <div class="col-lg-6">
                                <label class="col-form-label">Username</label>
                                <input class="form-control" type="text" placeholder="" asp-for="text_search" required>
                                @Html.ValidationMessageFor(m => m.text_search)
                            </div>
                            <div class="col-lg-2">
                                <label class="col-form-label"><br /></label>
                                <button class="btn btn-dark btn-block" type="submit">ค้นหา</button>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-12">
                                <div class="table-rep-plugin">
                                    <div class="table-responsive mb-0" data-pattern="priority-columns">
                                        <table class="table table-striped mb-0 font-12">
                                            <thead>
                                                <tr>
                                                    <th>Sam Account Name</th>
                                                    <th>Username</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @if (Model.lists2 != null)
                                                {
                                                    foreach (var item in Model.lists2)
                                                    {
                                                        <tr>
                                                            <td></td>
                                                            <td></td>
                                                        </tr>
                                                    }

                                                }
                                                @if (Model.lists2 == null || Model.lists2.Count() == 0)
                                                {
                                                    <tr>
                                                        <td colspan="2" class="text-center">ไม่พบข้อมูล</td>
                                                    </tr>
                                                }
                                            </tbody>

                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>


                    </div> <!-- end card-body -->
                </div> <!-- end card -->
            </div> <!-- end col -->
            <!-- end col -->
        </div>
    </form>


</div><!-- container -->
@section scripts{
    <script>
        function userrole_onchange() {
            var val = $('#userrole_search').val();
            window.location.href = '@(Url.Action("UserRole","System"))?userrole_search=' + val;
        }
    </script>
}
