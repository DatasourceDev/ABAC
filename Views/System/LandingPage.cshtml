@model ABAC.DTO.SearchDTO
@{
    ViewData["Title"] = "รูป Landing Page";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div aria-live="polite" aria-atomic="true" style="position: relative;">
                <div class="page-title-box">
                    <div class="float-right" style="width:50%">
                        @if (ViewBag.ReturnCode != null)
                        {
                            @if (ViewBag.ReturnCode == ReturnCode.Success)
                            {
                                <div class="alert alert-success  border-0" role="alert">
                                    <i class="mdi mdi-check-circle-outline font-18 mr-1"></i>
                                    <strong class="font-18">@ViewBag.Message</strong>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-danger border-0" role="alert">
                                    <i class="mdi mdi-close-circle-outline font-18 mr-1"></i>
                                    <strong class="font-18">@ViewBag.Message</strong>
                                </div>
                            }
                        }
                    </div>
                    <h4 class="page-title">รูป Landing Page</h4>
                    <p class="text-muted">
                        Landing Page Images
                    </p>
                </div><!--end page-title-box-->

            </div>
        </div><!--end col-->
    </div>
    <!--end row-->
    <form class="form-horizontal form-parsley" novalidate role="form" asp-action="LandingPage" asp-controller="System" enctype="multipart/form-data">
        <div class="form-group row">
            <div class="col-lg-12">
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label text-right">File</label>
                    <div class="col-lg-3">
                        <input type="file" id="file" name="file" accept="image/*" />
                        <br />
                        @Html.ValidationMessage("format_error")
                    </div>
                    <div class="col-lg-2 text-right">
                        <button class="btn btn-dark" type="submit">นำเข้า</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
    @if (Model.lists != null && Model.lists.Count() > 0)
    {
        <div class="form-group row">
            <div class="col-lg-12">
                <div class="table-rep-plugin">
                    <div class="table-responsive mb-0" data-pattern="priority-columns">
                        <table id="tech-companies-1" class="table table-striped mb-0">
                            <thead>
                                <tr>
                                    <th>Image</th>
                                    <th>File Name</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.lists != null)
                                {
                                    foreach (landing_page item in Model.lists)
                                    {
                                        <tr>
                                            <td>
                                                <img src="@(item.Url)" height="60" />
                                            </td>
                                            <td>
                                                @item.File_Name
                                            </td>
                                            <td>
                                                <a href="@Url.Action("LandingPageDelete", "System", new { id = item.ID })"
                                                   onclick="return confirm('ต้องการลบรายการนี้?')"
                                                   class="btn btn-danger btn-sm">
                                                    ลบ
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }

                                @if (Model.lists == null || Model.lists.Count() == 0)
                                {
                                    <tr>
                                        <td colspan="3" class="text-center">ไม่พบข้อมูล</td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    }

</div><!-- container -->
