@model ABAC.Identity.AdUser2
@using ABAC.DTO;
@using ABAC.Extensions
@{
    ViewData["Title"] = "สร้างบัญชีรายชื่อผู้ใช้";

}
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div aria-live="polite" aria-atomic="true" style="position: relative;">
                <div class="page-title-box">
                    <div class="float-right" style="width:50%">
                        @if (ViewBag.ReturnCode != null)
                        {
                            @if (ViewBag.ReturnCode == ReturnCode.Success)
                            {
                                <div class="alert alert-success  border-0" role="alert">
                                    <i class="mdi mdi-check-circle-outline font-18 mr-1"></i>
                                    <strong class="font-18">@ViewBag.Message</strong>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-danger border-0" role="alert">
                                    <i class="mdi mdi-close-circle-outline font-18 mr-1"></i>
                                    <strong class="font-18">@ViewBag.Message</strong>
                                </div>
                            }
                        }
                    </div>
                    <h4 class="page-title">สร้างบัญชีรายชื่อผู้ใช้</h4>
                    <p class="text-muted">
                        Create Account
                    </p>
                </div><!--end page-title-box-->
            </div>
        </div><!--end col-->
    </div>
    <!-- end page title end breadcrumb -->
    <!--end row-->
    <form id="form-register" class="form-horizontal form-parsley" asp-action="CreateAccount" asp-controller="Account" autocomplete="off" role="presentation">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body  mt-3">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label text-right">ประเภทบัญชี</label>
                                    <div class="col-md-9">
                                        <div class="form-check-inline my-1">
                                            <div class="custom-control custom-radio">
                                                <input type="radio" id="vip" name="aUUserType" value="@aUUserType.vip" class="custom-control-input" @(Model.aUUserType == aUUserType.vip ? "checked" : "")>
                                                <label class="custom-control-label" for="vip">VIP</label>
                                            </div>
                                        </div>
                                        <div class="form-check-inline my-1">
                                            <div class="custom-control custom-radio">
                                                <input type="radio" id="office" name="aUUserType" value="@aUUserType.staff" class="custom-control-input"  @(Model.aUUserType == aUUserType.staff ? "checked" : "")>
                                                <label class="custom-control-label" for="office">Staff</label>
                                            </div>
                                        </div>
                                        <div class="form-check-inline my-1">
                                            <div class="custom-control custom-radio">
                                                <input type="radio" id="bulk" name="aUUserType" value="@aUUserType.bulk" class="custom-control-input"  @(Model.aUUserType == aUUserType.bulk ? "checked" : "")>
                                                <label class="custom-control-label" for="bulk">Temp</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label text-right">Username</label>
                                    <div class="col-sm-3">
                                        <input class="form-control" type="text" asp-for="SamAccountName" required autocomplete="SamAccountName">
                                        @Html.ValidationMessageFor(m => m.SamAccountName)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label text-right">Password</label>
                                    <div class="col-sm-3">
                                        <input class="form-control" type="password" asp-for="Password" required autocomplete="new-password">
                                        @Html.ValidationMessageFor(m => m.Password)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label text-right">Confirm Password</label>
                                    <div class="col-sm-3">
                                        <input class="form-control" type="password" asp-for="ConfirmPassword" required>
                                        @Html.ValidationMessageFor(m => m.ConfirmPassword)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label text-right">First Name</label>
                                    <div class="col-sm-3">
                                        <input class="form-control" type="text" asp-for="GivenName" required>
                                        @Html.ValidationMessageFor(m => m.GivenName)

                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label text-right">Last Name</label>
                                    <div class="col-sm-3">
                                        <input class="form-control" type="text" asp-for="Surname" required>
                                        @Html.ValidationMessageFor(m => m.Surname)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label text-right">Email</label>
                                    <div class="col-sm-3">
                                        <input class="form-control" type="email" asp-for="EmailAddress" required>
                                        @Html.ValidationMessageFor(m => m.EmailAddress)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label text-right">Employee Code</label>
                                    <div class="col-sm-3">
                                        <input class="form-control" type="text" asp-for="aUEmpcode" required>
                                        @Html.ValidationMessageFor(m => m.aUEmpcode)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label text-right">Citizen ID</label>
                                    <div class="col-sm-3">
                                        <input class="form-control" type="text" asp-for="aUIDCard"  maxlength="13" required>
                                        @Html.ValidationMessageFor(m => m.aUIDCard)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label text-right">Passport ID</label>
                                    <div class="col-sm-3">
                                        <input class="form-control" type="text" asp-for="PassportID" required>
                                        @Html.ValidationMessageFor(m => m.PassportID)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label text-right">Reference</label>
                                    <div class="col-sm-3">
                                        <input class="form-control" type="text" asp-for="Reference" required>
                                        @Html.ValidationMessageFor(m => m.Reference)
                                    </div>
                                </div>
                            </div>
                        </div>
