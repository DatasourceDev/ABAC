@model ABAC.DTO.Bulk
@using ABAC.DTO;
@using ABAC.Extensions
@{
    ViewData["Title"] = "Create Bulk Account";

}
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div aria-live="polite" aria-atomic="true" style="position: relative;">
                <div class="page-title-box">
                    <div class="float-right" style="width:50%">
                        @if (ViewBag.ReturnCode != null)
                        {
                            @if (ViewBag.ReturnCode == ReturnCode.Success)
                            {
                                <div class="alert alert-success  border-0" role="alert">
                                    <i class="mdi mdi-check-circle-outline font-18 mr-1"></i>
                                    <strong class="font-18">@ViewBag.Message</strong>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-danger border-0" role="alert">
                                    <i class="mdi mdi-close-circle-outline font-18 mr-1"></i>
                                    <strong class="font-18">@ViewBag.Message</strong>
                                </div>
                            }
                        }
                    </div>
                    <h4 class="page-title">Create Bulk Account</h4>
                    <p class="text-muted">
                         สร้างบัญชีผู้ใช้จำนวนมาก
                    </p>
                </div><!--end page-title-box-->
            </div>
        </div><!--end col-->
    </div>
    <!-- end page title end breadcrumb -->
    <!--end row-->
    <form id="form-register" class="form-horizontal form-parsley" asp-action="CreateAccountBulk" asp-controller="Account" autocomplete="off" role="presentation">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body  mt-3">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label text-right">Number of People</label>
                                    <div class="col-sm-3">
                                        <input class="form-control" type="text" asp-for="NumberOfPeople" required>
                                        @Html.ValidationMessageFor(m => m.NumberOfPeople)
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div id="divExpire">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group row">
                                        <label class="col-sm-3 col-form-label text-right">Valid Date</label>
                                        <div class="col-sm-3">
                                            <input class="form-control dpicker" type="text" asp-for="ValidDate" placeholder="DD/MM/YYYY" required>
                                            @Html.ValidationMessageFor(m => m.ValidDate)
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group row">
                                        <label class="col-sm-3 col-form-label text-right">Expire Date</label>
                                        <div class="col-sm-3">
                                            <input class="form-control dpicker" type="text" asp-for="ExpireDate" placeholder="DD/MM/YYYY" required>
                                            @Html.ValidationMessageFor(m => m.ExpireDate)
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label text-right"></label>
                                    <div class="col-sm-8">
                                        <button class="btn btn-dark" type="submit">Save</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div> <!-- end card-body -->
                </div> <!-- end card -->
            </div> <!-- end col -->
            <!-- end col -->
        </div> <!-- end row -->
    </form>
</div><!-- container -->

@section scripts{
    <script>
        $(document).ready(function () {
        });
       
    </script>
   
}