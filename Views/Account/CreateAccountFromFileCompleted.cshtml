@using ABAC.Extensions
@model ABAC.DTO.SearchDTO
@{
    ViewData["Title"] = "Create Account from File Completed";
    var rowcnt = 0;
    if (Model.lists != null && Model.lists.Count() > 0)
    {
        rowcnt = Model.lists.Count();
    }
}
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div aria-live="polite" aria-atomic="true" style="position: relative;">
                <div class="page-title-box">
                    <div class="float-right" style="width:50%">
                        @if (ViewBag.ReturnCode != null)
                        {
                            @if (ViewBag.ReturnCode == ReturnCode.Success)
                            {
                                <div class="alert alert-success  border-0" role="alert">
                                    <i class="mdi mdi-check-circle-outline font-18 mr-1"></i>
                                    <strong class="font-18">@ViewBag.Message</strong>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-danger border-0" role="alert">
                                    <i class="mdi mdi-close-circle-outline font-18 mr-1"></i>
                                    <strong class="font-18">@ViewBag.Message</strong>
                                </div>
                            }
                        }
                    </div>
                    <h4 class="page-title">Create Account from File Completed</h4>
                    <p class="text-muted">
                         สร้างบัญชีรายชื่อผู้ใช้จากไฟล์สำเร็จ
                    </p>
                </div><!--end page-title-box-->
            </div>
        </div><!--end col-->
    </div>
    <!-- end page title end breadcrumb -->
    <!--end row-->
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    @if (Model.lists != null && Model.lists.Count() > 0)
                    {
                        <div class="form-group row">
                            <div class="col-lg-12">
                                <div class="table-rep-plugin">
                                    <div class="table-responsive mb-0" data-pattern="priority-columns">
                                        <table id="tech-companies-1" class="table table-striped mb-0">
                                            <thead>
                                                <tr>
                                                    <th>First Name</th>
                                                    <th>Last Name</th>
                                                    <th>CitizenID</th>
                                                    <th>PassportID</th>
                                                    <th>Reference</th>
                                                    <th>Remark</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @if (Model.lists != null)
                                                {
                                                    foreach (temp_import item in Model.lists)
                                                    {
                                                        var rowcolor = "";
                                                        if (item.ImportVerify == false)
                                                        {
                                                            rowcolor = "text-danger";
                                                        }
                                                        <tr class="@rowcolor">
                                                            <td>
                                                                @item.firstname
                                                            </td>
                                                            <td>
                                                                @item.lastname
                                                            </td>
                                                            <td>
                                                                @item.CitizenID
                                                            </td>
                                                            <td>
                                                                @item.PassportID
                                                            </td>
                                                            <td>
                                                                @item.Reference
                                                            </td>
                                                            <td>
                                                                @if (!string.IsNullOrEmpty(item.ImportRemark))
                                                                {
                                                                    @Html.Raw(item.ImportRemark.Replace("\r\n", "<br/>"))
                                                                }
                                                            </td>
                                                        </tr>
                                                    }
                                                }
                                                @if (Model.lists == null || Model.lists.Count() == 0)
                                                {
                                                    <tr>
                                                        <td colspan="6" class="text-center">No Data</td>
                                                    </tr>
                                                }
                                            </tbody>

                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }                    
                </div> <!-- end card-body -->
            </div> <!-- end card -->
        </div> <!-- end col -->
        <!-- end col -->
    </div>
</div><!-- container -->
}