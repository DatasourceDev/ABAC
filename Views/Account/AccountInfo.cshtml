                    </div> <!-- end card-body -->
                </div> <!-- end card -->
            </div> <!-- end col -->
            <!-- end col -->
        </div> <!-- end row -->
    </form>
</div><!-- container -->

@section scripts{
    <script>
        $(document).ready(function () {
            CUexpire_Onchange();
        });
        function CUexpire_Onchange() {
            if ($('#cu_CUexpire_select').get(0).checked == true) {
                $('.CUexpire').hide();
            }
            else {
                $('.CUexpire').show();
            }
        }
    </script>
}