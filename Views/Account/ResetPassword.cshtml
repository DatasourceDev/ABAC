@model ABAC.DTO.SearchDTO
@using ABAC.Extensions;
@using ABAC.Identity;
@{
    ViewData["Title"] = "เปลี่ยนรหัสผ่านใหม่ให้บัญชีผู้ใช้";

}

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div aria-live="polite" aria-atomic="true" style="position: relative;">
                <div class="page-title-box">
                    <div class="float-right" style="width:50%">
                        @if (ViewBag.ReturnCode != null)
                        {
                            @if (ViewBag.ReturnCode == ReturnCode.Success)
                            {
                                <div class="alert alert-success  border-0" role="alert">
                                    <i class="mdi mdi-check-circle-outline font-18 mr-1"></i>
                                    <strong class="font-18">@ViewBag.Message</strong>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-danger border-0" role="alert">
                                    <i class="mdi mdi-close-circle-outline font-18 mr-1"></i>
                                    <strong class="font-18">@ViewBag.Message</strong>
                                </div>
                            }
                        }
                    </div>
                    <h4 class="page-title">เปลี่ยนรหัสผ่านใหม่ให้บัญชีผู้ใช้</h4>
                    <p class="text-muted">
                        Reset Password Account
                    </p>
                </div><!--end page-title-box-->


            </div>
        </div><!--end col-->
    </div>
    <form class="form-horizontal form-parsley" asp-action="ResetPassword" asp-controller="Account" method="get">

        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="mt-0 header-title">ค้นหา</h4>
                        <div class="form-group row">
                            <div class="col-lg-9">
                                <label class="col-form-label">คำค้น</label>
                                <input class="form-control" type="text" placeholder="รหัสผู้ใช้, ชื่อ, นามสกุล, เลขประจำตัวประชาชน, รหัสพนักงาน, รหัสนักศึกษา, อีเมล์" asp-for="text_search" required>
                                @Html.ValidationMessageFor(m => m.text_search)

                            </div>
                            <div class="col-lg-2">
                                <label class="col-form-label">ประเภทผู้ใช้</label>
                                <select class="form-control" asp-for="usertype_search">
                                    <option value="@aUUserType.staff">@aUUserType.staff.toUserTypeName()</option>
                                    <option value="@aUUserType.student">@aUUserType.student.toUserTypeName()</option>
                                </select>
                            </div>
                            <div class="col-lg-1">
                                <label class="col-form-label"><br /></label>
                                <button class="btn btn-dark btn-block" type="submit">ค้นหา</button>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-12">
                                <div class="table-rep-plugin">
                                    <div class="table-responsive mb-0" data-pattern="priority-columns">
                                        <table class="table table-striped mb-0 font-12">
                                            <thead>
                                                <tr>
                                                    <th>Sam Account Name</th>
                                                    <th>Employee/Student Code</th>
                                                    <th>User Principal Name</th>
                                                    <th>First Name</th>
                                                    <th>Last Name</th>
                                                    <th>Mail</th>
                                                    <th></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @if (Model.lists != null)
                                                {
                                                    foreach (AdUser4 item in Model.lists)
                                                    {
                                                        <tr>
                                                            <td>
                                                                <a href="@Url.Action("ChangePassword", "Account", new { id = item.sAMAccountName })" target="_blank"><u>@item.sAMAccountName</u></a>
                                                            </td>
                                                            <td>
                                                                @if (item.aUUserType == aUUserType.student)
                                                                {
                                                                    @item.aUStudentId
                                                                }
                                                                else
                                                                {
                                                                    @item.aUEmpcode
                                                                }
                                                            </td>
                                                            <td>@item.userPrincipalName</td>
                                                            <td>@item.givenName</td>
                                                            <td>@item.sn</td>
                                                            <td>@item.mail</td>
                                                            <td>
                                                                @if (NumUtil.ParseInteger(item.userAccountControl) == (int)userAccountControl.Enable || NumUtil.ParseInteger(item.userAccountControl) == (int)userAccountControl.EnablePasswordNotRequired)
                                                                {
                                                                    <span id="stutus-@item.sAMAccountName" class="badge badge-success">@item.userAccountControl.toUserAccountControl()</span>

                                                                }
                                                                else
                                                                {
                                                                    <span id="stutus-@item.sAMAccountName" class="badge badge-danger">@item.userAccountControl.toUserAccountControl()</span>
                                                                }
                                                            </td>
                                                        </tr>
                                                    }

                                                }
                                                @if (Model.lists == null || Model.lists.Count() == 0)
                                                {
                                                    <tr>
                                                        <td colspan="7" class="text-center">ไม่พบข้อมูล</td>
                                                    </tr>
                                                }
                                            </tbody>

                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>


                    </div> <!-- end card-body -->
                </div> <!-- end card -->
            </div> <!-- end col -->
            <!-- end col -->
        </div>
    </form>
    <!-- end row -->

</div><!-- container -->
