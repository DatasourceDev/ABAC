@model ABAC.DTO.ChangePassword2DTO
@{
    ViewData["Title"] = "Reset Password";
    Layout = "_LayoutBox";

}
<div class="container">
    <div class="row vh-100 ">
        <div class="col-12 align-self-center">
            <div class="auth-page">
                <div class="card auth-card shadow-lg">
                    <div class="card-body">
                        <div class="px-3">
                            <div class="auth-logo-text">
                                <h4 class="mt-0 mb-3 mt-5">Reset Password</h4>
                                <p class="text-muted mb-0"></p>
                                <p class="mb-0">
                                    <b>
                                        Password Policy Recommendations
                                        <br />
                                        1. Your password must be between 8 and 16 characters.
                                        <br />
                                        2. Your password must contain at least one uppercase, or capital.
                                        <br />
                                        3. Your password must contain at least one lowercase letter.
                                        <br />
                                        4. Your password must contain at least one number digit.
                                    </b>
                                </p>
                            </div> <!--end auth-logo-text-->
                            <form class="form-horizontal auth-form form-parsley my-4" novalidate role="form" asp-action="FG" asp-controller="Auth">
                                @Html.HiddenFor(m => m.Code)
                                @Html.HiddenFor(m => m.UserName)

                                <div class="form-group">
                                    <label for="Password">New Password</label>
                                    <div class="input-group mb-3">
                                        <span class="auth-form-icon">
                                            <a href="#" onclick="eyes('Password')"><i id="eyesPassword" class="mdi mdi-eye"></i></a>
                                        </span>
                                        <input class="form-control" type="password" asp-for="Password" required maxlength="20" tabindex="1">
                                    </div>
                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })

                                </div><!--end form-group-->
                                <div class="form-group">
                                    <label for="ConfirmPassword">Comfirm Password</label>
                                    <div class="input-group mb-3">
                                        <span class="auth-form-icon">
                                            <a href="#" onclick="eyes('ConfirmPassword')"><i id="eyesConfirmPassword" class="mdi mdi-eye"></i></a>
                                        </span>
                                        <input class="form-control" type="password" asp-for="ConfirmPassword" required maxlength="20" tabindex="2">
                                    </div>
                                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                                </div><!--end form-group-->
                                <div class="form-group mb-0 row">
                                    <div class="col-12 mt-2">
                                        <button type="submit" class="btn btn-dark btn-block waves-effect waves-light">Submit</button>
                                    </div><!--end col-->
                                </div> <!--end form-group-->
                            </form><!--end form-->
                        </div><!--end /div-->

                        <div class="m-3 text-center text-muted">
                            <a href="@Url.Action("Login","Auth")" class="text-primary ml-2" tabindex="3">Back</a>
                        </div>
                    </div><!--end card-body-->
                </div><!--end card-->
            </div><!--end auth-page-->
        </div><!--end col-->
    </div><!--end row-->
</div>

<!-- end row -->
<!-- end page content -->
@section scripts{
    <script>
    function eyes(id) {
        if ($('#' + id).get(0).type == 'password') {
            $('#' + id).get(0).type = 'text';
            $('#eyes' + id).removeClass();
            $('#eyes' + id).addClass("mdi mdi-eye-off");
        }
        else {
            $('#' + id).get(0).type = 'password';
            $('#eyes' + id).removeClass();
            $('#eyes' + id).addClass("mdi mdi-eye");
        }
    }
    </script>
}



