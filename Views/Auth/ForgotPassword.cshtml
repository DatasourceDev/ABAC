@model ABAC.DTO.ForgotPasswordDTO
@{
    ViewData["Title"] = "Forgot Password";
    Layout = "_LayoutBox";

}
<div class="container">
    <div class="row vh-100 ">
        <div class="col-12 align-self-center">
            <div class="auth-page">
                <div class="card auth-card shadow-lg">
                    <div class="card-body">
                        <div class="px-3">
                            <div class="text-center auth-logo-text">
                                <h4 class="mt-0 mb-3 mt-5">Forgot Password</h4>
                                <p class="text-muted mb-0">Enter Username</p>
                            </div> <!--end auth-logo-text-->
                            <form class="form-horizontal form-parsley" novalidate role="form" asp-action="ForgotPassword" asp-controller="Auth">
                                <div class="form-group">
                                    <br />
                                    <input type="text" class="form-control" asp-for="UserName" required>
                                    @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                                    @if (ViewBag.ReturnCode != null)
                                    {
                                        @if (ViewBag.ReturnCode == ReturnCode.Success)
                                        {
                                            <br/>
                                            <label class="text-primary">@ViewBag.Message</label>
                                        }
                                    }
                                </div><!--end form-group-->
                                <div class="form-group mb-0 row">
                                    <div class="col-12 mt-2">
                                        <button class="btn btn-dark btn-block waves-effect waves-light" type="submit"><i class="far fa-check-circle ml-1"></i> Submit</button>
                                    </div><!--end col-->
                                </div> <!--end form-group-->
                            </form><!--end form-->
                        </div><!--end /div-->

                        <div class="m-3 text-center text-muted">
                            <a href="@Url.Action("Login","Auth")" class="text-primary ml-2">Back</a></p>
                        </div>
                    </div><!--end card-body-->
                </div><!--end card-->
            </div><!--end auth-page-->
        </div><!--end col-->
    </div><!--end row-->
</div>


