@model ABAC.Identity.AdUser2
@using ABAC.Extensions;
@{
    ViewData["Title"] = "Profile";
}

<div class="container-fluid">
    <!-- Page-Title -->
    <div class="row">
        <div class="col-sm-12">
            <div class="page-title-box">
                <div class="float-right">
                </div>
                <h4 class="page-title">Profile</h4>
                <p class="text-muted">
                    ข้อมูลบัญชีรายชื่อผู้ใช้
                </p>
            </div><!--end page-title-box-->
        </div><!--end col-->
    </div>
    <!-- end page title end breadcrumb -->
    <!--end row-->
    <div class="row ">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body mt-3">
                    <div class="row">
                        <div class="col-lg-7">
                            <div class="form-group row">
                                <div class="col-sm-4 text-right">
                                    <label class="col-form-label-eng">Account Type</label>
                                    <span class="text-eng">ประเภทผู้ใช้</span>
                                </div>
                                <div class="col-sm-8">
                                    <input class="form-control" type="text" value="@Model.aUUserType.toUserTypeName()" readonly>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-7">
                            <div class="form-group row">
                                <div class="col-sm-4 text-right">
                                    <label class="col-form-label-eng">Username</label>
                                    <span class="text-eng">รหัสผู้ใช้</span>
                                </div>
                                <div class="col-sm-8">
                                    <input class="form-control" type="text" asp-for="SamAccountName" readonly>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-7">
                            <div class="form-group row">
                                <div class="col-sm-4 text-right">
                                    <label class="col-form-label-eng">First Name</label>
                                    <span class="text-eng">ชื่อ</span>
                                </div>
                                <div class="col-sm-8">
                                    <input class="form-control" type="text" asp-for="GivenName" readonly>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-7">
                            <div class="form-group row">
                                <div class="col-sm-4 text-right">
                                    <label class="col-form-label-eng">Last Name</label>
                                    <span class="text-eng">นามสกุล</span>
                                </div>
                                <div class="col-sm-8">
                                    <input class="form-control" type="text" asp-for="Surname" readonly>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-7">
                            <div class="form-group row">
                                <div class="col-sm-4 text-right">
                                    <label class="col-form-label-eng">Other Email</label>
                                    <span class="text-eng">อีเมล</span>
                                </div>
                                <div class="col-sm-8">
                                    <input class="form-control" type="text" asp-for="aUOtherMail" readonly>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div> <!-- end card-body -->
        </div> <!-- end card -->
    </div> <!-- end col -->
    <!-- end col -->
</div> <!-- end row -->
